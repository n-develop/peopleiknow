@model PeopleIKnow.Models.Gift
@{
    Layout = null;
}
<div class="box">
    <form id="gift-form">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ContactId"/>

        <div class="field">
            <label class="label">Idea / Given / Received</label>
            <div class="control">
                <div class="select">
                    <select asp-for="GiftType" asp-items="Html.GetEnumSelectList<GiftType>()">
                    </select>
                </div>
            </div>
        </div>

        <div class="field">
            <label class="label">Description</label>
            <div class="control">
                <textarea class="textarea" asp-for="Description" placeholder="Describe the gift here...">
                </textarea>
            </div>
        </div>

        @if (Model.Id == 0)
        {
            <a onclick="Entities.save('Gift', 'gift-form')" class="button is-info is-medium"><i class="fas fa-plus-circle"></i>&nbsp;Add</a>
        }
        else
        {
            <a onclick="Entities.update('Gift', 'gift-form')" class="button is-info is-medium"><i class="fas fa-download"></i>&nbsp;Save</a>
        }
        <a onclick="backToDetails(@Model.ContactId)" class="button is-danger is-medium"><i class="fas fa-times-circle"></i>&nbsp;Cancel</a>
    </form>
</div>