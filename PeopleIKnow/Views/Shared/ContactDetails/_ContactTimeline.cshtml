@model Contact

<div class="panel">
    <p class="panel-heading">
        📝 Status Updates
        <a class="button is-pulled-right is-small is-success" onclick="addEntity('StatusUpdate')">
            <i class="fa fa-plus-circle"></i>
        </a>
    </p>

    @foreach (var statusUpdate in Model.Timeline)
    {
        <div class="panel-block">
            <label class="label">@statusUpdate.Created.ToString("dd.MM.yyyy")</label>
            <div class="field has-addons">
                <div class="control is-expanded">
                    <input class="input" value="@statusUpdate.StatusText" placeholder="Status update" disabled="disabled">
                </div>
                <p class="control">
                    <a class="button is-warning" onclick="editEntity(@statusUpdate.Id, 'StatusUpdate')">
                        <i class="fa fa-pencil-alt"></i>
                    </a>
                </p>
                <p class="control">
                    <a class="button is-danger" onclick="deleteEntity(@statusUpdate.Id, 'StatusUpdate')">
                        <i class="fa fa-minus-circle"></i>
                    </a>
                </p>
            </div>
        </div>
    }
</div>
