@using Microsoft.AspNetCore.Mvc.Localization
@model Contact
@inject IViewLocalizer Localizer

<div class="field">
    <label class="label">@Localizer["photo"]</label>
    <div class="field">
        <figure class="image is-96x96">
            <img src="@Model.ImagePath" alt="Profile image">
        </figure>
    </div>
    <div class="control">
        <div class="file has-name is-fullwidth">
            <label class="file-label">
                <input id="image-input" class="file-input" type="file" name="Image">
                <span class="file-cta">
                    <span class="file-icon">
                        <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                        @Localizer["browse"]
                    </span>
                </span>
                <span id="file-name" class="file-name">
                    @Localizer["select a file"]
                </span>
            </label>
        </div>
    </div>
</div>