<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PeopleIKnow</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bulma/bulma.css"/>
        <link rel="stylesheet" href="~/css/site.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bulma/bulma.min.css"/>
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
    </environment>
</head>
<body>
@* NAVBAR START *@
<nav id="top" class="navbar has-shadow">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
            <span class="icon is-large">
                <i class="fa fa-lg fa-users"></i>
            </span>
            <span class="title">People I Know</span>
        </a>
        <div class="navbar-item is-hidden-mobile is-hidden-tablet" id="back-button">
            <a class="button">
                <span class="icon">
                    <i class="fa fa-lg fa-arrow-left"></i>
                </span>
            </a>
        </div>
        <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>
    <div class="navbar-menu" id="navMenu">
        <div class="navbar-end">
            <div class="navbar-item">
                <div class="field has-addons">
                    <div class="control">
                        <input id="search-term" class="input" type="text" placeholder="Find contacts...">
                    </div>
                    <div class="control">
                        <a id="search-button" class="button is-info">
                            <i class="fa fa-search"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="navbar-item">
                <partial name="_LoginPartial"/>
            </div>
            <div class="navbar-item">
                <a class="button" href="/logout"><i class="fa fa-sign-out-alt"></i>&nbsp;Logout</a>
            </div>
        </div>
    </div>
</nav>
@* NAVBAR END *@

<div id="pik-app" class="columns">
    @RenderBody()
</div>

<div class="modal" id="loading-indicator">
    <div class="modal-background"></div>
    <div class="loader"></div>
</div>

<environment include="Development">
    <script defer src="~/lib/fontawesome/font-awesome.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script defer src="~/lib/fontawesome/font-awesome.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>

@RenderSection("Scripts", required: false)
</body>
</html>