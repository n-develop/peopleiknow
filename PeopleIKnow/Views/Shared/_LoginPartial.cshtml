@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="navbar-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Dashboard", new {area = ""})">
            <button id="logout" type="submit" class="button"><i class="fa fa-sign-out-alt"></i>&nbsp;Logout</button>
        </form>
    </li>
}
else
{
    <li class="navbar-item">
        <a class="button" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-in-alt"></i>&nbsp;Login</a>
    </li>
}