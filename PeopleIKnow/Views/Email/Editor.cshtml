@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using PeopleIKnow.Localization
@model EmailAddress
@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    Layout = null;
}

<div class="box">
    <form id="email-form">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ContactId"/>

        <div class="field">
            <label class="label">@Localizer["type"]</label>
            <div class="control">
                <input class="input" asp-for="Type" type="text" placeholder="@Localizer["type placeholder"]">
            </div>
        </div>

        <div class="field">
            <label class="label">@Localizer["email"]</label>
            <div class="control">
                <input class="input" asp-for="Email" type="email" placeholder="test@@domain.com">
            </div>
        </div>

        @if (Model.Id == 0)
        {
            <a onclick="Entities.save('Email', 'email-form')" class="button is-info is-medium"><i class="fas fa-plus-circle"></i>&nbsp;@SharedLocalizer["add"]</a>
        }
        else
        {
            <a onclick="Entities.update('Email', 'email-form')" class="button is-info is-medium"><i class="fas fa-download"></i>&nbsp;@SharedLocalizer["save"]</a>
        }
        <a onclick="Navigation.backToDetails(@Model.ContactId)" class="button is-danger is-medium"><i class="fas fa-times-circle"></i>&nbsp;@SharedLocalizer["cancel"]</a>
    </form>
</div>