@model EmailAddress
@{
    Layout = null;
}
<div class="box">
    <form id="email-form">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ContactId"/>

        <div class="field">
            <label class="label">Type</label>
            <div class="control">
                <input class="input" asp-for="Type" type="text" placeholder="Type e.g. Private">
            </div>
        </div>

        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" asp-for="Email" type="email" placeholder="test@@domain.com">
            </div>
        </div>

        @if (Model.Id == 0)
        {
            <a onclick="Entities.save('Email', 'email-form')" class="button is-info is-medium"><i class="fas fa-plus-circle"></i>&nbsp;Add</a>
        }
        else
        {
            <a onclick="Entities.update('Email', 'email-form')" class="button is-info is-medium"><i class="fas fa-download"></i>&nbsp;Save</a>
        }
        <a onclick="Navigation.backToDetails(@Model.ContactId)" class="button is-danger is-medium"><i class="fas fa-times-circle"></i>&nbsp;Cancel</a>
    </form>
</div>