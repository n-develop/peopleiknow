@model PeopleIKnow.Models.StatusUpdate
@{
    Layout = null;
}
<div class="box">
    <form id="status-update-form" asp-controller="StatusUpdate" asp-action="Add" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ContactId"/>

        <div class="field">
            <label class="label">Date</label>
            <div class="control">
                <input class="input" asp-for="Created" type="date">
            </div>
        </div>

        <div class="field">
            <label class="label">Status Update</label>
            <div class="control">
                <textarea class="textarea" asp-for="StatusText" placeholder="Write the status update here...">
                </textarea>
            </div>
        </div>

        <a onclick="saveStatusUpdate()" class="button is-info is-medium"><i class="fas fa-plus-circle"></i>&nbsp;Add</a>
        <a onclick="backToDetails(@Model.ContactId)" class="button is-danger is-medium"><i class="fas fa-times-circle"></i>&nbsp;Cancel</a>
    </form>
</div>