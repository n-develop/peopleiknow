@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using PeopleIKnow.Localization
@model PeopleIKnow.Models.StatusUpdate
@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    Layout = null;
}
<div class="box">
    <form id="status-update-form">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ContactId"/>

        <div class="field">
            <label class="label">@SharedLocalizer["date"]</label>
            <div class="control">
                <input class="input" asp-for="Created" type="date">
            </div>
        </div>

        <div class="field">
            <label class="label">@Localizer["status update"]</label>
            <div class="control">
                <textarea class="textarea" asp-for="StatusText" placeholder="@Localizer["status update placeholder"]">
                </textarea>
            </div>
        </div>

        @if (Model.Id == 0)
        {
            <a onclick="Entities.save('StatusUpdate', 'status-update-form')" class="button is-info is-medium"><i class="fas fa-plus-circle"></i>&nbsp;@SharedLocalizer["add"]</a>
        }
        else
        {
            <a onclick="Entities.update('StatusUpdate', 'status-update-form')" class="button is-info is-medium"><i class="fas fa-download"></i>&nbsp;@SharedLocalizer["save"]</a>
        }
        <a onclick="Navigation.backToDetails(@Model.ContactId)" class="button is-danger is-medium"><i class="fas fa-times-circle"></i>&nbsp;@SharedLocalizer["cancel"]</a>
    </form>
</div>