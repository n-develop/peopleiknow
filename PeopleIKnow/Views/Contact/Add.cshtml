@model Contact
@{
    Layout = null;
}
<div class="box contact-preview" data-contact-id="@Model.Id">
    <form id="contact-form">
        <input type="hidden" asp-for="Id"/>

        <partial name="ContactDetails/_ContactName"/>

        <partial name="ContactDetails/_ContactTags"/>

        @* EMAILS *@
        <div class="panel">
            <p class="panel-heading">
                📧 Emails
            </p>
            <div class="panel-block">
                You have to save the contact before you can add emails
            </div>
        </div>
        @* EMAILS *@

        <partial name="ContactDetails/_ContactBirthday"/>

        <partial name="ContactDetails/_ContactAddress"/>

        <partial name="ContactDetails/_ContactWork"/>

        <div class="panel">
            <p class="panel-heading">
                ☎️ Telephone
            </p>
            <div class="panel-block">
                You have to save the contact before you can add telephone numbers
            </div>
        </div>

        <div class="panel">
            <p class="panel-heading">
                🧑‍🤝‍🧑 Relationships
            </p>
            <div class="panel-block">
                You have to save the contact before you can add relationships
            </div>
        </div>

        <div class="panel">
            <p class="panel-heading">
                🚴 Activities
            </p>
            <div class="panel-block">
                You have to save the contact before you can add activities
            </div>
        </div>

        <div class="panel">
            <p class="panel-heading">
                🎁 Gifts
            </p>
            <div class="panel-block">
                You have to save the contact before you can add gifts
            </div>
        </div>

        <div class="panel">
            <p class="panel-heading">
                ⏰ Reminders
            </p>
            <div class="panel-block">
                You have to save the contact before you can add reminders
            </div>
        </div>

        <div class="panel">
            <p class="panel-heading">
                📝 Status Updates
            </p>
            <div class="panel-block">
                You have to save the contact before you can add status updates
            </div>
        </div>

    </form>
</div>

<a id="save-button" class="button is-info is-large" onclick="Contact.create()"><i class="fas fa-download"></i>&nbsp;Save</a>