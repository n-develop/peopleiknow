@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Localization
@using PeopleIKnow.Localization
@model TelephoneNumber
@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    Layout = null;
}
<div class="box">
    <form id="telephone-form">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ContactId"/>

        <div class="field">
            <label class="label">@Localizer["type"]</label>
            <div class="control">
                <input class="input" asp-for="Type" type="text" placeholder="@Localizer["type placeholder"]">
            </div>
        </div>

        <div class="field">
            <label class="label">@Localizer["telephone number"]</label>
            <div class="control">
                <input class="input" asp-for="Telephone" type="tel" placeholder="+01 555 84893">
            </div>
        </div>
        @if (Model.Id == 0)
        {
            <a onclick="Entities.save('Telephone', 'telephone-form')" class="button is-info is-medium"><i class="fas fa-plus-circle"></i>&nbsp;@SharedLocalizer["add"]</a>
        }
        else
        {
            <a onclick="Entities.update('Telephone', 'telephone-form')" class="button is-info is-medium"><i class="fas fa-download"></i>&nbsp;@SharedLocalizer["save"]</a>
        }
        <a onclick="Navigation.backToDetails(@Model.ContactId)" class="button is-danger is-medium"><i class="fas fa-times-circle"></i>&nbsp;@SharedLocalizer["cancel"]</a>
    </form>
</div>