@using Microsoft.Extensions.Localization
@using PeopleIKnow.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PeopleIKnow.Models.Reminder
@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    Layout = null;
}
<div class="box">
    <form id="reminder-form">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ContactId"/>

        <div class="field">
            <label class="label">@SharedLocalizer["date"]</label>
            <div class="control">
                <input class="input" asp-for="Date" type="date">
            </div>
        </div>
        <div class="field">
            <div class="control">
                <label class="checkbox">
                    <input type="checkbox" asp-for="RemindMeEveryYear">
                    @Localizer["remind me every year"]
                </label>
            </div>
        </div>
        <div class="field">
            <label class="label">@SharedLocalizer["description"]</label>
            <div class="control">
                <input class="input" asp-for="Description" type="text" placeholder="@Localizer["description placeholder"]">
            </div>
        </div>

        @if (Model.Id == 0)
        {
            <a onclick="Entities.save('Reminder', 'reminder-form')" class="button is-info is-medium"><i class="fas fa-plus-circle"></i>&nbsp;@SharedLocalizer["add"]</a>
        }
        else
        {
            <a onclick="Entities.update('Reminder', 'reminder-form')" class="button is-info is-medium"><i class="fas fa-download"></i>&nbsp;@SharedLocalizer["save"]</a>
        }
        <a onclick="Navigation.backToDetails(@Model.ContactId)" class="button is-danger is-medium"><i class="fas fa-times-circle"></i>&nbsp;@SharedLocalizer["cancel"]</a>
    </form>
</div>