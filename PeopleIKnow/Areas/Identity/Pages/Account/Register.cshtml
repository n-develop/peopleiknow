@page
@model RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "_IdentityLayout";
}

<div class="column is-8-tablet is-6-desktop is-5-widescreen">
    <form id="account" asp-route-returnUrl="@Model.ReturnUrl" aria-labelledby="legend" class="box" method="post">
        <h1 class="title is-3 has-text-centered">Register your Account</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="field">
            <label class="label" asp-for="Input.Email"></label>
            <div class="control has-icons-left">
                <span class="icon is-small is-left">
                    <i class="far fa-user-circle"></i>
                </span>
                <input asp-for="Input.Email" class="input" placeholder="john.smith@yourmail.com"/>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="field">
            <label class="label" asp-for="Input.Password"></label>
            <div class="control has-icons-left">
                <span class="icon is-small is-left">
                    <i class="fa fa-lock"></i>
                </span>
                <input asp-for="Input.Password" class="input" placeholder="Password"/>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="field">
            <label class="label" asp-for="Input.ConfirmPassword"></label>
            <div class="control has-icons-left">
                <span class="icon is-small is-left">
                    <i class="fa fa-lock"></i>
                </span>
                <input asp-for="Input.ConfirmPassword" class="input" placeholder="Password"/>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="field">
            <button type="submit" class="button is-info">Register</button>
        </div>
    </form>
</div>
